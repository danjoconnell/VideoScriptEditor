<UserControl x:Class="VideoScriptEditor.Views.Common.PointEditBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Target="{Binding ElementName=_pointXTextBox}" VerticalAlignment="Center" HorizontalAlignment="Right" Content="X" />
        <TextBox x:Name="_pointXTextBox" Grid.Column="1" Margin="5" MinWidth="50" />
        <Label Grid.Column="2" Target="{Binding ElementName=_pointYTextBox}" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Y" />
        <TextBox x:Name="_pointYTextBox" Grid.Column="3" Margin="5" MinWidth="50" />
    </Grid>
</UserControl>
